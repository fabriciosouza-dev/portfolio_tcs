<!-- Contact-->
<section class="page-section bg-dark text-white" id="contact">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 text-center">
        <h2 class="mt-0">Entre em Contato</h2>
        <hr class="divider my-4"/>
        <p class="mb-5">Pronto para iniciar seu próximo projeto conosco? Envie-nos um
          e-mail e entraremos em contato com você o mais breve possível!</p>
      </div>
    </div>
  </div>
  <div class="container">
    <%= form_tag contact_mains_path, id: "contactForm", method: :post do %>
      <div class="row align-items-stretch mb-5">
        <div class="col-md-6">
          <div class="form-group">
            <%= text_field_tag :nome, nil, {class: 'form-control help-block', required: true, placeholder: 'Por favor, digite seu nome.'} %>
          </div>
          <div class="form-group">
            <%= text_field_tag :email, nil, {class: 'form-control help-block', required: true, placeholder: 'Por favor, digite seu e-mail.', type: 'email'} %>
          </div>
          <div class="form-group mb-md-0">
            <%= text_field_tag :telefone, nil, {class: 'form-control help-block fone', required: true, placeholder: 'Por favor, digite seu telefone.'} %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group form-group-textarea mb-md-0">
            <%= text_area_tag :mensagem, nil, {class: 'form-control help-block', required: true, placeholder: 'Por favor, digite uma mensagem.', rows: 5} %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <div id="success"></div>
        <%= submit_tag "Enviar Mensagem", id:"sendMessageButton", class: 'btn btn-primary btn-xl text-uppercase', data: { disable_with: "Enviando.." } %>
      </div>
    <% end %>
  </div>
</section>